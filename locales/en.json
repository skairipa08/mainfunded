    "terms": {
        "title": "Terms of Service",
        "lastUpdated": "Last updated: {date}",
        "sections": {
            "acceptance": {
                "title": "1. Acceptance of Terms",
                "content": "By accessing and using FundEd, you accept and agree to be bound by these Terms of Service. If you do not agree, you may not use our platform."
            },
            "platform": {
                "title": "2. Platform Description",
                "content": "FundEd is a crowdfunding platform that connects verified students with donors to support educational needs. We facilitate the connection but are not a party to the funding relationship."
            },
            "studentResp": {
                "title": "3. Student Responsibilities",
                "items": [
                    "Provide accurate and truthful information in your student profile",
                    "Submit legitimate verification documents",
                    "Use funds for the stated educational purposes",
                    "Comply with all applicable laws and regulations",
                    "Maintain the accuracy of campaign information"
                ]
            },
            "donorResp": {
                "title": "4. Donor Responsibilities",
                "items": [
                    "Donations are voluntary and non-refundable unless required by law",
                    "Donors understand that FundEd is a platform facilitator, not a guarantor",
                    "Donors are responsible for their own tax implications"
                ]
            },
            "verification": {
                "title": "5. Verification Process",
                "content": "Student verification is conducted by our admin team. We reserve the right to:",
                "items": [
                    "Request additional verification documents",
                    "Reject verification applications at our discretion",
                    "Revoke verification status if information is found to be inaccurate"
                ]
            },
            "payment": {
                "title": "6. Payment Processing",
                "content": "Payments are processed through Stripe. FundEd does not store credit card information. All payment disputes should be directed to Stripe or your financial institution."
            },
            "prohibited": {
                "title": "7. Prohibited Activities",
                "content": "You agree not to:",
                "items": [
                    "Provide false or misleading information",
                    "Use the platform for illegal purposes",
                    "Impersonate others or misrepresent your identity",
                    "Interfere with the platform's operation",
                    "Attempt to gain unauthorized access to any part of the platform"
                ]
            },
            "liability": {
                "title": "8. Limitation of Liability",
                "content": "FundEd acts as a platform facilitator. We are not responsible for the accuracy of campaign information, the use of funds by students, or disputes between students and donors."
            },
            "termination": {
                "title": "9. Termination",
                "content": "We reserve the right to suspend or terminate accounts that violate these terms or engage in fraudulent activity."
            },
            "changes": {
                "title": "10. Changes to Terms",
                "content": "We may update these terms from time to time. Continued use of the platform constitutes acceptance of updated terms."
            }
        }
    },
    "privacy": {
        "title": "Privacy Policy",
        "lastUpdated": "Last updated: {date}",
        "sections": {
            "collection": {
                "title": "1. Information We Collect",
                "content": "We collect information that you provide directly to us, including:",
                "items": [
                    "Account information (name, email address) when you sign up",
                    "Student profile information (university, field of study, country) for verification",
                    "Campaign information (title, description, funding goals)",
                    "Payment information processed securely through Stripe",
                    "Verification documents submitted for student verification"
                ]
            },
            "usage": {
                "title": "2. How We Use Your Information",
                "content": "We use the information we collect to:",
                "items": [
                    "Provide, maintain, and improve our services",
                    "Process and verify student applications",
                    "Process donations and payment transactions",
                    "Send you transactional emails (verification status, donation confirmations)",
                    "Respond to your inquiries and provide customer support",
                    "Comply with legal obligations"
                ]
            },
            "sharing": {
                "title": "3. Information Sharing",
                "content": "We do not sell your personal information. We may share your information only in the following circumstances:",
                "items": [
                    "With payment processors (Stripe) to process donations",
                    "With service providers who assist in operating our platform",
                    "When required by law or to protect our rights",
                    "Public campaign information (name, campaign details) as displayed on campaign pages"
                ]
            },
            "security": {
                "title": "4. Data Security",
                "content": "We implement appropriate technical and organizational measures to protect your personal information. However, no method of transmission over the Internet is 100% secure."
            },
            "rights": {
                "title": "5. Your Rights",
                "content": "You have the right to:",
                "items": [
                    "Access your personal information",
                    "Correct inaccurate information",
                    "Request deletion of your account and data",
                    "Opt out of non-transactional communications"
                ]
            },
            "contact": {
                "title": "6. Contact Us",
                "content": "If you have questions about this Privacy Policy, please contact us through the support channels provided on the platform."
            }
        }
    },
